extends ../layout.pug

block content 
    h1 Inscription
    .container
        if error
            .alert.alert-danger #{error} 
        form(method="post")
            h1.h3.mb-3.fw-normal Inscription
            .form-floating
                input#floatingUsername.form-control(type='text' placeholder="Nom d'utilisateur" name="username" value= user.username)
                label(for='floatingUsername') Nom d'utilisateur
            br
            .form-floating
                input#floatingPassword.form-control(type='password' placeholder="Mot de passe" name="password")
                label(for='floatingPassword') Mot de passe
            br
            .form-floating
                input#floatingFirstname.form-control(type='text' placeholder="Prénom" name="lastname" value= user.lastname)
                label(for='floatingFirstname') Prénom
            br
            .form-floating
                input#floatingLastname.form-control(type='text' placeholder="Nom" name="firstname" value= user.firstname)
                label(for='floatingLastname') Nom
            hr
            button.btn.btn-primary.w-100.py-2(type='submit') Inscription