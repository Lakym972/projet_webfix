doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Webflix
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous')
        link(rel="stylesheet", href="/css/style.css")
    body
        header 
            nav.navbar.navbar-expand-lg.bg-secondary
                ul.navbar-nav.me-auto.mb-2.mb-lg-0
                    if username
                        li.nav-item
                                a.nav-link(href="/logout") DÃ©connexion 
                    else 
                        li.nav-item
                            a.nav-link(href="/register") Inscription
                        li.nav-item
                            a.nav-link(href="/login") Connexion
        br

        - var messages = getMessages()
        if messages.notify
            each msg in messages.notify
                .alert.alert-info= msg
        if messages.error
            each msg in messages.error
                .alert.alert-danger= msg

        block content


    script(src=process.env.BROWSER_REFRESH_URL)
